CREATE TABLE service_providers (
    id INT(11) AUTO_INCREMENT PRIMARY KEY,
    provider_name VARCHAR(255) NOT NULL,
    email VARCHAR(255) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    profile_picture VARCHAR(255) NOT NULL,
    
   
);

CREATE TABLE services (
    id INT AUTO_INCREMENT PRIMARY KEY,
    provider_id INT,
    service_title VARCHAR(100),
    service_description TEXT,
    service_image VARCHAR(255),
    contact_email VARCHAR(100),
    contact_phone VARCHAR(20),
    FOREIGN KEY (provider_id) REFERENCES service_providers(id)
);
CREATE TABLE bookings (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    service_id INT,
    booking_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(255) NOT NULL,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,  -- Store the hashed password
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
 CREATE TABLE user_signins (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT NOT NULL,  -- References the user's ID from the users table
    sign_in_time TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE
);
CREATE TABLE provider_signins (
    id INT AUTO_INCREMENT PRIMARY KEY,
    provider_id INT NOT NULL,  -- References the provider's ID from the service_providers table
    sign_in_time TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (provider_id) REFERENCES service_providers(id) ON DELETE CASCADE
);
